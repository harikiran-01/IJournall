<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!--login and register styling-->
    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkpink</item>
        <item name="colorControlActivated">@color/darkpink</item>
    </style>

    <style name="authButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_state_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
