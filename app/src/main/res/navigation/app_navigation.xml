<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation">

    <fragment
        android:id="@+id/access_dest"
        android:name="com.hk.ijournal.views.access.AccessFragment"
        android:label="AccessFragment">

        <action
            android:id="@+id/access_to_home"
            app:destination="@id/home_dest"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/app_navigation"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/home_dest"
        android:name="com.hk.ijournal.views.home.HomeFragment"
        android:label="HomeFragment">

        <action
            android:id="@+id/home_to_access"
            app:destination="@id/access_dest"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/app_navigation"
            app:popUpToInclusive="true" />

        <argument
            android:name="diaryUser"
            app:argType="com.hk.ijournal.repository.data.source.local.entities.DiaryUser" />
    </fragment>


</navigation>